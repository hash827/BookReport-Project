<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="베스트셀러 도서"
        android:textColor="#5167E6"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_margin="5dp"
        android:background="@drawable/img_change"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_best1"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img_best2"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img_best3"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_update_book"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_custom"
            android:onClick="onClick"
            android:padding="15dp"
            android:text="나의 서재"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="150dp"
            android:layout_height="70dp"

            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:onClick="onClick"
            android:text="도서검색"
            android:textSize="24sp"
            android:background="@drawable/ripple_custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.773"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_search_library"
            android:layout_width="150dp"
            android:background="@drawable/ripple_custom"
            android:layout_height="70dp"
            android:onClick="onClick"
            android:layout_margin="15dp"
            android:text="도서관검색"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</LinearLayout>
